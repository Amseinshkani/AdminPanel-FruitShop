 @model MVProduct 
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Apply for job by Colorlib</title>

    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i"
        rel="stylesheet">

    <!-- Main CSS-->
    <link href="/InputAdmin/css/main.css" rel="stylesheet" media="all">

</head>

<body style="direction: rtl;cursor:wait;">
    <div class="page-wrapper bg-dark p-t-100 p-b-50">
        <div class="wrapper wrapper--w900">
            <div class="card card-6">
                <div class="card-body">
                    <form action="/Home/InputAdminAdd" method="post" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="name">اسم میوه</div>
                            <div class="value">
                                <input asp-for="Name" class="input--style-6" type="text">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">قیمت هر کیلو</div>
                            <div class="value">
                                <div class="input-group">
                                    <input asp-for="Price" class="input--style-6" type="Number" placeholder="قیمت">
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">مقدار موجودی در انبار</div>
                            <div class="value">
                                <div class="input-group">
                                    <input asp-for="Count" class="input--style-6" type="Number" placeholder="وزن">
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">عکس میوه</div>
                            <div class="value">
                                <div class="input-group js-input-file">
                                    <input asp-for="upimg" class="input-file" type="file" id="upimg" name="upimg">
                                    <label class="label--file" for="upimg">انتخواب عکس</label>
                                    <span class="input-file__info">فایلی انتخواب نشده است</span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn--radius-2 btn--blue-2">ارسال به لیست
                                فروشگاه</button>

                    </form>
                </div> 
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="/InputAdmin/vendor/jquery/jquery.min.js"></script>


    <!-- Main JS-->
    <script src="/InputAdmin/js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
<!-- end document-->